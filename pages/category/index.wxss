/* pages/category/index.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_contanter {
  height: 100%;
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_contanter .lerft_view {
  flex: 2;
}
.cates .cates_contanter .lerft_view .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_contanter .lerft_view .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_contanter .right_view {
  flex: 5;
}
.cates .cates_contanter .right_view .goods_group .goods_title {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.cates .cates_contanter .right_view .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_contanter .right_view .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_contanter .right_view .goods_group .goods_list navigator {
  display: block;
  width: 33.33%;
  text-align: center;
}
.cates .cates_contanter .right_view .goods_group .goods_list navigator image {
  width: 50%;
  height: 90rpx;
}
